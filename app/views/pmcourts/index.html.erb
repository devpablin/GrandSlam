<p id="notice"><%= notice %></p>

<h1>Courts</h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmcourts.each do |pmcourt| %>
      <tr>
        <td><%= pmcourt.number %></td>
        <td><%= link_to 'Show', pmcourt , class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_pmcourt_path(pmcourt) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pmcourt, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pmcourt', new_pmcourt_path , class: "btn btn-success"%>
