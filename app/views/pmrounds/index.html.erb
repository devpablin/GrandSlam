<p id="notice"><%= notice %></p>

<h1>Rounds</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Round</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmrounds.each do |pmround| %>
      <tr>
        <td><%= pmround.round %></td>
        <td><%= link_to 'Show', pmround , class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_pmround_path(pmround) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pmround, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pmround', new_pmround_path , class: "btn btn-success"%>
