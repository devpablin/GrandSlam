<p id="notice"><%= notice %></p>

<h1>Tournaments</h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Init date</th>
      <th>End date</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmtournaments.each do |pmtournament| %>
      <tr>
        <td><%= pmtournament.name %></td>
        <td><%= pmtournament.year %></td>
        <td><%= pmtournament.init_date %></td>
        <td><%= pmtournament.end_date %></td>
        <td><%= pmtournament.pmplace.name %></td>
        <td><%= link_to 'Show', pmtournament , class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_pmtournament_path(pmtournament) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pmtournament, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pmtournament', new_pmtournament_path , class: "btn btn-success"%>
