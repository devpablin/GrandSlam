<%= form_with(model: pmtournament, local: true) do |form| %>
  <% if pmtournament.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pmtournament.errors.count, "error") %> prohibited this pmtournament from being saved:</h2>

      <ul>
      <% pmtournament.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :pmtournament_name %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.date_select :year, id: :pmtournament_year %>
  </div>

  <div class="field">
    <%= form.label :init_date %>
    <%= form.date_select :init_date, id: :pmtournament_init_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :pmtournament_end_date %>
  </div>

  <div class="field">
    <%= form.label "Place" %>
    <%= form.select( :pmplace_id, Pmplace.all.collect {|p| [ p.name , p.id ] } )%>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>
