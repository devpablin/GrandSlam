<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Fechanacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmplayers.each do |pmplayer| %>
      <tr>
        <td><%= pmplayer.first_name %></td>
        <td><%= pmplayer.last_name %></td>
        <td><%= pmplayer.fechanacimiento %></td>
        <td><%= link_to 'Show', pmplayer , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_pmplayer_path(pmplayer) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pmplayer, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pmplayer', new_pmplayer_path , class: "btn btn-success"%>
