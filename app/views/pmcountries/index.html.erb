<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmcountries.each do |pmcountry| %>
      <tr>
        <td><%= pmcountry.name %></td>
        <td><%= link_to 'Show', pmcountry, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_pmcountry_path(pmcountry), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', pmcountry, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

