<p id="notice"><%= notice %></p>

<h1>Pmprizes</h1>

<table >
  <thead>
    <tr>
      <th>Amount</th>
      <th>Name</th>
      <th>Match</th>
      <th>Player</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmprizes.each do |pmprize| %>
      <tr>
        <td><%= pmprize.amount %></td>
        <td><%= pmprize.name %></td>
        <td><%= pmprize.pmmatch.date.strftime("%b %d, %Y") +' '+ pmprize.pmmatch.pmplayer_1.last_name+' vs. '+pmprize.pmmatch.pmplayer_2.last_name %></td>
        <td><%= pmprize.pmplayer.first_name+' '+pmprize.pmplayer.last_name %></td>
        <td><%= link_to 'Show', pmprize %></td>
        <td><%= link_to 'Edit', edit_pmprize_path(pmprize) %></td>
        <td><%= link_to 'Destroy', pmprize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

