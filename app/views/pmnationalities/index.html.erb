<p id="notice"><%= notice %></p>

<h1>Nationalities</h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmnationalities.each do |pmnationality| %>
      <tr>
        <td><%= pmnationality.name%></td>
        <td><%= link_to 'Show', pmnationality , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_pmnationality_path(pmnationality) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pmnationality, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pmnationality', new_pmnationality_path , class: "btn btn-success"%>
