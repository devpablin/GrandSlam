<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pmcountry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmplaces.each do |pmplace| %>
      <tr>
        <td><%= pmplace.name %></td>
        <td><%= pmplace.pmcountry_id %></td>
        <td><%= link_to 'Show', pmplace , class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_pmplace_path(pmplace) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pmplace, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

